program Arrays;
   
procedure main()
var n : int;
    i : int;
    j : int;
    k : int;
    a : array of int;
begin
    // check that input is valid
    n := 4;
    if n < 1 then return;

    // fill array
    a := new(n);
    k := len(0,a);
    i := 0;
    while i < k do
    begin
      a[i] := i;
      i := i + 1;
    end;

    j := 0;
    while j < k do
    begin
      write(a[j]);
      j := j + 1;
    end;

end; // main
